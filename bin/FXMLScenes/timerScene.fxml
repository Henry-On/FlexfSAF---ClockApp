         <children>
            <TextField fx:id="txtSetHour" prefHeight="26.0" prefWidth="37.0" promptText="HRS" styleClass="text-center" />
            <TextField fx:id="txtSetMin" prefHeight="26.0" prefWidth="37.0" promptText="MIN" styleClass="text-center" />
            <TextField fx:id="txtSetSec" prefHeight="26.0" prefWidth="37.0" promptText="SEC" styleClass="text-center" />
