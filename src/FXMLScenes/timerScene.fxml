<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane prefWidth="286.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TimerSceneController">
   <children>
      <AnchorPane fx:id="mainContainer" prefHeight="272.0" prefWidth="286.0" stylesheets="@../styles.css">
         <children>
            <Label fx:id="lblShowTImer" alignment="TOP_CENTER" layoutX="53.0" layoutY="103.0" text="00:00:00">
               <font>
                  <Font name="Bookman Old Style Bold" size="39.0" />
               </font>
            </Label>
            <Label layoutX="107.0" layoutY="85.0" text="Remaining time:" />
            <Label layoutX="126.0" layoutY="12.0" text="Set time:" />
            <AnchorPane layoutX="79.0" layoutY="39.0">
               <children>
                  <TextField fx:id="txtSetHour" prefHeight="26.0" prefWidth="37.0" promptText="HRS" styleClass="text-center" />
                  <TextField fx:id="txtSetMin" layoutX="52.0" prefHeight="26.0" prefWidth="37.0" promptText="MIN" styleClass="text-center" />
                  <TextField fx:id="txtSetSec" layoutX="102.0" prefHeight="26.0" prefWidth="37.0" promptText="SEC" styleClass="text-center" />
               </children>
            </AnchorPane>
            <ButtonBar layoutX="39.0" layoutY="195.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="26.0" prefWidth="162.0">
               <buttons>
                  <Button fx:id="btnPlay" mnemonicParsing="false" onAction="#onBtnPlay" text="Start" />
                  <Button mnemonicParsing="false" text="Reset" />
               </buttons>
            </ButtonBar>
         </children>
      </AnchorPane>
   </children>
</StackPane>
