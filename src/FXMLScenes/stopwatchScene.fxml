<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="173.0" prefWidth="224.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.StopwatchSceneController">
   <children>
      <AnchorPane fx:id="mainContainer" prefHeight="173.0" prefWidth="246.0">
         <children>
            <Label layoutX="95.0" layoutY="30.0" text="Remaining time:" />
            <Label fx:id="lblShowCounter" alignment="TOP_CENTER" layoutX="15.0" layoutY="63.0" text="00:00:00:00">
               <font>
                  <Font name="Bookman Old Style Bold" size="39.0" />
               </font>
            </Label>
            <HBox layoutX="87.0" layoutY="147.0" spacing="16.0">
               <children>
                  <Button fx:id="playButton" mnemonicParsing="false" onAction="#onRunStopwatch" text="Start" />
                  <Button fx:id="btnResetStopwatch" mnemonicParsing="false" onAction="#onResetStopwatch" text="Reset" />
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </children>
</StackPane>
